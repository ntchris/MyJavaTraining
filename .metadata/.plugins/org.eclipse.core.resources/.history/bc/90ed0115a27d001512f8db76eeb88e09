package mytestpackage;

public class MyMathFunctions {

	static public double getFactorial(int x) {
		if (x < 0)
			throw new IllegalArgumentException("Must not be negative");
		double result;
		if (x == 0)
			return 1;
		if (x == 1)
			return 1;

		result = x * 1.0 * (x - 1.0);
		return result;
	}

	static public void testFactorial() {
	}

}
